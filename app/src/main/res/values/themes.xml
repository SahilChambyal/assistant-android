<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Assistant" parent="Theme.Material3.Light.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/primary_foreground</item>
        <item name="colorOnPrimaryContainer">@color/primary_container_foreground</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/secondary_foreground</item>
        <item name="colorOnSecondaryContainer">@color/secondary_container_foreground</item>
        
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/surface_foreground</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/foreground</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.Assistant.Button</item>
        <item name="textAppearanceButton">@style/TextAppearance.Assistant.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Assistant.Card</item>
        <item name="textInputStyle">@style/Widget.Assistant.TextInputLayout</item>
        <item name="chipStyle">@style/Widget.Assistant.Chip</item>
        <item name="switchStyle">@style/Widget.Assistant.Switch</item>
    </style>

    <!-- Button style -->
    <style name="Widget.Assistant.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/pressed</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/accent_foreground</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Card style -->
    <style name="Widget.Assistant.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border</item>
    </style>

    <!-- Text Input style -->
    <style name="Widget.Assistant.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/muted</item>
    </style>

    <!-- Chip style -->
    <style name="Widget.Assistant.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/secondary_container</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/secondary_container_foreground</item>
        <item name="closeIconTint">@color/secondary_container_foreground</item>
        <item name="rippleColor">@color/hover</item>
    </style>

    <!-- Switch style -->
    <style name="Widget.Assistant.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/surface</item>
        <item name="trackTint">@color/primary</item>
    </style>

    <!-- Text appearances -->
    <style name="TextAppearance.Assistant.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>
</resources>